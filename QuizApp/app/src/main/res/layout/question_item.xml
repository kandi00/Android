<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/ashGray"
    android:padding="10dp">

    <TextView
        android:id="@+id/text_view_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/question_item_text_view_padding"
        android:paddingTop="@dimen/question_item_text_view_padding"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_answer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/question_item_text_view_padding_left"
        android:textColor="@color/TimberWolf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_question" />

    <TextView
        android:id="@+id/text_view_answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/TimberWolf"
        android:paddingLeft="@dimen/question_item_text_view_padding_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_answer1" />

    <TextView
        android:id="@+id/text_view_answer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/TimberWolf"
        android:paddingLeft="@dimen/question_item_text_view_padding_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_answer2" />

    <TextView
        android:id="@+id/text_view_answer4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/question_item_text_view_padding_left"
        android:textColor="@color/TimberWolf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_answer3" />
</androidx.constraintlayout.widget.ConstraintLayout>